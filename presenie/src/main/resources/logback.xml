<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- X{depth} -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %-64(%logger{-36}.%method{-20}) - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>

